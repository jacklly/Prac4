BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            size_hint_x: 2.5
            id: miles_text
            on_text: app.handle_conversion()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_up()
            Button:
                text: 'Down'
                on_press: app.handle_down()
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_conversion()
    Label:
        text: app.result_screen
        color: [1, 1, 0, 1]

